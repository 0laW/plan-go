<div style="margin-top: 6rem; ">
  <div class="d-flex flex-column" style="max-width: 600px; width: 100%; margin: auto; padding: 40px; height:100vh">


    <h2 class="fs-3 pb-2", style="font-weight: 800; color: #121212">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="">
        <div class="form-floating mb-3">
          <%= f.email_field :email,
                      class: "form-control",
                      id: "floatingEmail",
                      placeholder: "Email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.label :email, "Email", for: "floatingEmail" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password,
                        class: "form-control",
                        id: "floatingPassword",
                        placeholder: "Password",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
          <%= f.label :password, "Password", for: "floatingPassword" %>
          <br>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>



      <div class="d-flex flex-column align-items-center justify-content-center">
        <div class="form-actions">
          <%= f.button :submit, "Login", class: "btn btn-secondary rounded-pill archivo mt-5 mb-2", style: "width: 150px; font-weight: 600; font-size:  18px" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
