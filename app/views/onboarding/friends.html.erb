<% content_for :hide_navbar, true %>

<div class="d-flex vh-100 justify-content-center align-items-center" style="background-color: white;">
  <div class="bg-white bg-opacity-75 rounded-4 p-4 shadow-lg text-center"
       style="backdrop-filter: blur(50px); max-width: 600px; width: 90%; color: black;">

    <h1 class="archivo-black fw-bold fs-3 mb-4">Find Friends</h1>

    <%= form_with url: onboarding_find_friends_path, method: :post, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :username, "Search by username", class: "form-label archivo fw-semibold d-block text-center" %>
        <%= form.text_field :username, class: "form-control rounded-pill text-center", placeholder: "e.g. travel_lover92" %>
      </div>

      <%= form.submit "Search", class: "btn btn-outline-primary btn-lg rounded-pill mb-3" %>
    <% end %>

    <%= link_to "Complete Onboarding â†’", root_path, class: "btn btn-success btn-lg rounded-pill mt-3" %>

    <div class="progress mt-4 mx-auto" style="height: 8px; border-radius: 4px; width: 90%;">
      <div class="progress-bar bg-success" style="width: 0%;"></div>
    </div>
  </div>
</div>
