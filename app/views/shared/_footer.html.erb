<footer class="footer text-light pt-5 pb-4" style="background-color: #626F47; font-size: 1rem; max-height: 330px;">
  <div class="container">
    <div class="row justify-content-between align-items-start">

      <!-- Logo + Socials -->
      <div class="col-12 col-md-3 mb-4 text-center text-md-start">
        <h4 class="fw-bold text-light">Plan<span class="text-warning">&</span>Go</h4>
        <div class="d-flex justify-content-center justify-content-md-start gap-3 mt-3">
          <%= link_to "#", class: "text-light fs-5" do %><i class="fab fa-instagram"></i><% end %>
          <%= link_to "#", class: "text-light fs-5" do %><i class="fab fa-facebook"></i><% end %>
          <%= link_to "#", class: "text-light fs-5" do %><i class="fab fa-linkedin"></i><% end %>
          <%= link_to "#", class: "text-light fs-5" do %><i class="fab fa-x-twitter"></i><% end %>
        </div>
      </div>

      <!-- Accordion Container for Mobile -->
      <div class="col-12 col-md-6">
        <div class="accordion accordion-flush d-md-none" id="footerAccordion">

          <!-- Product Section -->
          <div class="accordion-item bg-transparent border-0">
            <h2 class="accordion-header" id="productHeading">
              <button class="accordion-button collapsed bg-transparent text-light px-0" type="button" data-bs-toggle="collapse" data-bs-target="#productCollapse" aria-expanded="false" aria-controls="productCollapse">
                Links
              </button>
            </h2>
            <div id="productCollapse" class="accordion-collapse collapse" aria-labelledby="productHeading" data-bs-parent="#footerAccordion">
              <ul class="list-unstyled ps-3 mt-2">
                <li><%= link_to root_path, class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-home me-2"></i>Home<% end %></li>
                <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-search me-2"></i>Search<% end %></li>
                <li><%= link_to "#", class: "text-light text-decoration-none d-block" do %><i class="fas fa-user me-2"></i>Profile<% end %></li>
              </ul>
            </div>
          </div>

          <!-- Resources Section -->
          <div class="accordion-item bg-transparent border-0">
            <h2 class="accordion-header" id="resourcesHeading">
              <button class="accordion-button collapsed bg-transparent text-light px-0" type="button" data-bs-toggle="collapse" data-bs-target="#resourcesCollapse" aria-expanded="false" aria-controls="resourcesCollapse">
                Resources
              </button>
            </h2>
            <div id="resourcesCollapse" class="accordion-collapse collapse" aria-labelledby="resourcesHeading" data-bs-parent="#footerAccordion">
              <ul class="list-unstyled ps-3 mt-2">
                <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-blog me-2"></i>Blog<% end %></li>
                <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-info-circle me-2"></i>About Us<% end %></li>
                <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-envelope me-2"></i>Contact Us<% end %></li>
                <li><%= link_to "#", class: "text-light text-decoration-none d-block" do %><i class="fas fa-comment-dots me-2"></i>Give Feedback<% end %></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Desktop View: Same Links, Not Collapsed -->
        <div class="row d-none d-md-flex">
          <div class="col-6">
            <h6 class="text-light fw-bold">Product</h6>
            <ul class="list-unstyled">
              <li><%= link_to root_path, class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-home me-2"></i>Home<% end %></li>
              <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-search me-2"></i>Search<% end %></li>
              <li><%= link_to "#", class: "text-light text-decoration-none d-block" do %><i class="fas fa-user me-2"></i>Profile<% end %></li>
            </ul>
          </div>
          <div class="col-6">
            <h6 class="text-light fw-bold">Resources</h6>
            <ul class="list-unstyled">
              <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-blog me-2"></i>Blog<% end %></li>
              <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-info-circle me-2"></i>About Us<% end %></li>
              <li><%= link_to "#", class: "text-light text-decoration-none d-block mb-2" do %><i class="fas fa-envelope me-2"></i>Contact Us<% end %></li>
              <li><%= link_to "#", class: "text-light text-decoration-none d-block" do %><i class="fas fa-comment-dots me-2"></i>Give Feedback<% end %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <hr style="border-top: 1px solid #F2EED7; opacity: 0.3;" />

    <!-- Bottom Bar -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-light small">
      <p class="mb-2 mb-md-0">Â© 2025 Plan&Go | Your AI-powered trip planner ðŸš€</p>
      <div>
        <%= link_to "Privacy Policy", "#", class: "text-light text-decoration-none me-3" %>
        <%= link_to "Terms & Conditions", "#", class: "text-light text-decoration-none" %>
      </div>
    </div>
  </div>
</footer>
