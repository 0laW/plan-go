<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<div style="background-image: url('https://i.natgeofe.com/k/a6c9f195-de20-445d-9d36-745ef56042c5/OG_Colosseum_Ancient-Rome_KIDS_1122_3x2.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;" class="d-flex vh-100 justify-content-center align-items-center px-3">
  <div class="rounded-4 p-4 shadow-lg text-center" style="background-color: rgba(254, 252, 250, 0.15); backdrop-filter: blur(35px); max-width: 525px; width: 100%; max-height: 567px; margin-top: -70px;">
    <h1 class="archivo fs-3 mt-1 mb-1" style="font-weight: 800; color: #121212">Plan your Perfect Route</h1>
    <p class="archivo fs-6 mb-3" style="font-weight: 200; color: #121212">Powered by AI and your preferences</p>

    <%= form_with model: @trip, url: trips_path, method: :post, local: true do |f| %>
      <div class="d-flex flex-column gap-3 mb-4 align-items-center">

        <div class="rounded-4 p-3 bg-white bg-opacity-75" style="backdrop-filter: blur(10px); width: 100%; max-width: 475px;">

          <div class="row g-3">

            <div class="col-12 col-md-6 d-flex flex-column">
              <%= f.label :start_date, class: "archivo form-label small mb-2 text-start fw-bold" do %>
                <i class="bi bi-calendar-event me-1"></i> Start Date
              <% end %>
              <%= f.text_field :start_date, id: "start-date", class: "p-2 form-control focus-ring form-control-sm rounded-pill", placeholder: "Select start date", style: "border: 1px solid rgba(0, 0, 0, 0.15); background-color: rgba(255, 255, 255, 0.9);" %>
            </div>

            <div class="col-12 col-md-6 d-flex flex-column">
              <%= f.label :end_date, class: "archivo form-label small mb-2 text-start fw-bold" do %>
                <i class="bi bi-calendar-event me-1"></i> End Date
              <% end %>
              <%= f.text_field :end_date, id: "end-date", class: "p-2 form-control focus-ring form-control-sm rounded-pill", placeholder: "Select end date", style: "border: 1px solid rgba(0, 0, 0, 0.15); background-color: rgba(255, 255, 255, 0.9);" %>
            </div>

            <div class="col-12 d-flex flex-column">
              <%= f.label :location, class: "archivo form-label small mb-2 text-start fw-bold" do %>
                <i class="bi bi-geo-alt-fill me-1"></i> Destination
              <% end %>
              <%= f.text_field :location, id: "location", class: "p-2 form-control form-control-sm focus-ring rounded-pill", placeholder: "e.g. Madrid, Spain", style: "border: 1px solid rgba(0, 0, 0, 0.15); background-color: rgba(255, 255, 255, 0.9);" %>
            </div>

      <div class="col-12 d-flex flex-column">
        <%= f.label :budget, class: "archivo form-label fw-bold small mb-2 text-start" do %>
          <i class="bi bi-cash-coin me-1"></i> Budget
        <% end %>

        <div class="d-flex gap-2">
          <%= f.select :currency, options_for_select([["£ GBP", "GBP"], ["€ EUR", "EUR"], ["$ USD", "USD"],["A$ AUD", "AUD"],
          ["C$ CAD", "CAD"],
          ["¥ JPY", "JPY"],
          ["₹ INR", "INR"],
          ["¥ CNY", "CNY"]], selected: "GBP"), {}, class: "form-select form-select-sm rounded-pill p-2 focus-ring" , style: "width: 100px; border: 1px solid rgba(0, 0, 0, 0.15); background-color: rgba(255, 255, 255, 0.9);" %>

          <%= f.text_field :budget, id: "budget", class: "p-2 form-control form-control-sm focus-ring rounded-pill", placeholder: "e.g. 40", style: "border: 1px solid rgba(0, 0, 0, 0.15); background-color: rgba(255, 255, 255, 0.9);" %>
        </div>
      </div>

          </div>

          <div class="d-flex flex-column justify-content-center align-items-center mt-4">
            <%= f.submit "Plan my trip →", class: "btn btn-secondary btn-lg rounded-pill archivo", style: "width: 170px; font-weight: 600;" %>

            <%= link_to "Edit trip preferences", "#", class: "archivo text-black text-decoration-none border-bottom border-0 border-black mt-3", style: "font-size: 14px; font-weight: 300;", data: { turbo: false }, onmouseover: "this.style.borderBottom='2px solid black'", onmouseout: "this.style.borderBottom='0'" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  const budgetSlider = document.getElementById('budget-slider');
  const budgetValue = document.getElementById('budget-value');

  const startDatePicker = flatpickr("#start-date", {
    dateFormat: "M d, Y",
    minDate: "today",
    onChange: function (selectedDates) {
      if (selectedDates.length > 0) {
        endDatePicker.set('minDate', selectedDates[0]);
      }
    }
  });

  const endDatePicker = flatpickr("#end-date", {
    dateFormat: "M d, Y",
    minDate: "today",
  });

  function initAutocomplete() {
    const input = document.getElementById('location');
    if (!input) return;

    const autocomplete = new google.maps.places.Autocomplete(input, {
      types: ['(cities)'],
      strictBounds: false,
    });

    autocomplete.addListener('place_changed', () => {
      const place = autocomplete.getPlace();
      console.log('Place selected:', place.formatted_address || place.name);
    });
  }
</script>

<style>
  .flatpickr-calendar {
    transform: scale(0.7);
    font-size: 16px;
    padding: 0.25rem;
  }
</style>
