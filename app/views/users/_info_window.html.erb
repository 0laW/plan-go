<div class="info-window">
  <h6 class="mb-1"><%= activity.name %></h6>
  <p class="mb-1"><strong>Location:</strong> <%= activity.address %></p>
  <p class="mb-1"><strong>Category:</strong> <%= activity.category.name %></p>
  <p class="mb-1"><strong>Trip:</strong> <%= trip.name %></p>
  <p class="mb-1"><strong>Date:</strong> <%= trip.start_date.strftime('%b %Y') %></p>

  <% if reviews.any? %>
    <div class="border-top pt-2 mt-2">
      <p class="mb-1"><strong>Review:</strong> <%= reviews.first.comment %></p>
      <p class="mb-0"><small><strong>Rating:</strong> <%= reviews.first.rating %>/5</small></p>
    </div>
  <% else %>
    <div class="border-top pt-2 mt-2">
      <p class="mb-1 text-muted"><em>No review left.</em></p>
    </div>
  <% end %>
</div>
